extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bodered
				thead
					tr
						th 名字
						th 时间
						th 查看
						th 更新
						th 删除
				tdody
					each item in users
						tr(class='item-id-#{item._id}')
							td #{item.name}
							td #{moment(item.meta.updatedAt).format('MM/DD/YYYY')}
							td: a(target='_blank',href='/movie/#{item._id}') 查看
							td: a(target='_blank',href='/admin/updatemovie/#{item._id}') 修改
							td
								button.btn.btn-danger.del(type='button',data-id='#{item._id}') 删除
