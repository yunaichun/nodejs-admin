extends ../layout

block content
	.container
		.row
			each cat in catetories
				.panel.panel-default
					.panel-heading
						h3
							a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
					.panel-body
						if cat.movies &&cat.movies.length > 0
							each item in cat.movies
								.col-md-2
									.thumbnail
										a(href='/movie/#{item._id}')
											if item.poster.indexOf('http') > -1
												img(src='#{item.poster}',alt='#{item.title}',style='width:100px;height:100px;')
											else
												img(src='/upload/#{item.poster}',alt='#{item.title}',style='width:100px;height:100px;')
										.caption
											h3 #{item.title}
											p: a.btn.btn-primary(href='/movie/#{item._id}',role='button')
												观看预告片

